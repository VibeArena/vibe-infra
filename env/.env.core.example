# ===== Core VM (.env.core) =====

# Postgres (container-local)
POSTGRES_DB=vibe
POSTGRES_USER=vibe
POSTGRES_PASSWORD=strong-pass

# Used by workers/executor (service DNS names)
DATABASE_URL=postgresql://vibe:strong-pass@postgres:5432/vibe
REDIS_URL=redis://redis:6379/0

# Object storage (dev: MinIO; prod: S3)
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
S3_ENDPOINT=
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Images (same tags as edge)
WEB_IMAGE=ghcr.io/<ORG>/vibearena-backend:main
EXECUTOR_IMAGE=ghcr.io/<ORG>/vibearena-executor:main

# Telemetry (apps on core talk to local otel)
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel:4317
SENTRY_DSN=
