# ===== Edge VM (.env.edge) =====

# Django
DJANGO_SECRET_KEY=change-me
DJANGO_ALLOWED_HOSTS=your.domain.com

# Upstream services (Core VM private IP)
# 예: 10.0.2.10 이 Core VM 사설 IP라고 가정
DATABASE_URL=postgresql://vibe:strong-pass@10.0.2.10:5432/vibe
REDIS_URL=redis://10.0.2.10:6379/0

# Object storage
S3_ENDPOINT=https://s3.ap-northeast-2.amazonaws.com
S3_BUCKET=vibearena-artifacts
S3_ACCESS_KEY=change-me
S3_SECRET_KEY=change-me

# Telemetry → Core VM의 OTel Collector(사설 IP)
OTEL_EXPORTER_OTLP_ENDPOINT=http://10.0.2.10:4317
SENTRY_DSN=

# Images
WEB_IMAGE=ghcr.io/<ORG>/vibearena-backend:main
EXECUTOR_IMAGE=ghcr.io/<ORG>/vibearena-executor:main

# TLS (provided nginx.conf expects these paths inside container)
TLS_CERT=/etc/nginx/certs/fullchain.pem
TLS_KEY=/etc/nginx/certs/privkey.pem
